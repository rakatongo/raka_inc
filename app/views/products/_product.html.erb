<div class="product">
	<%= image_tag(product.imagen_url) %>
	<h3><%= product.titulo %></h3>
	<div class="link pull-right">
		<%= link_to product_path(product.id), class: "btn btn-info btn-small"  do %>
			<b class="icon-search icon-white"></b> More Info.
		<% end %>
		<%= link_to line_items_path(:product_id => product), class: "btn btn-small btn-info" , method: :post, remote: true do %>
			<b class="icon-shopping-cart icon-white"></b> Add to Cart
		<% end %>
	</div>
	<p><%= number_to_currency(product.precio, presicion:2) %></p>			
</div>		